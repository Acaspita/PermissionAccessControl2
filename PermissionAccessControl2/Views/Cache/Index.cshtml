@model IEnumerable<PermissionParts.Permissions>
@{
    ViewData["Title"] = "Index";
}

<h2>Dynamic toggling of user's claims</h2>

@if (@Model == null)
{
<p class="text-danger">Either no one is logged in or UpdateCookieOnChange is set to false in appsettings.json.</p>
}
else
{
    <h5>You currently have these cache permissions in your claims</h5>
    <ul>
        @foreach (var claim in @Model)
        {
            <li>@claim.ToString()</li>
        }
    </ul>
    <a class="btn btn-primary" asp-area="" asp-controller="Cache" asp-action="Toggle">Toggle Cache</a>
}

