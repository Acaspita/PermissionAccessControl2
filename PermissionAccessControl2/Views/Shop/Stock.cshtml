@model Tuple<List<ServiceLayer.Shop.ListStockDto>, bool>
@{
    ViewData["Title"] = "Shop Stock";
}

@if (!Model.Item1.Any())
{
    <h3>No stock found</h3>
}
else
{
    var displayThis = Model.Item2 ? "for shop" + Model.Item1.First().ShopName : "(by shop)";
    
    <h3>List Stock @displayThis</h3>
    <table class="table">
        <tr>
            @if (!Model.Item2)
            {
                <th>Shop</th>
            }
            <th>Stock name</th>
            <th>#In stock</th>
            <th>Retail price</th>
        </tr>
        @foreach (var stock in @Model.Item1)
        {
            <tr>
                @if (!Model.Item2)
                {
                    <td>@stock.ShopName</td>
                }
                <td>@stock.Name</td>
                <td>@stock.NumInStock</td>
                <td>@stock.RetailPrice</td>
            </tr>
        }
    </table>
}